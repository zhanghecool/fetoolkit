{
  "name": "vcgfetoolkit",
  "icon": "assets/icons/icon.png",
  "displayName": "FE Toolkit",
  "description": "Front-end development toolkit.",
  "version": "0.5.0",
  "publisher": "ZhangHe",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhanghecool/fetoolkit.git"
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "css",
    "js",
    "ts",
    "scss",
    "fe"
  ],
  "activationEvents": [
    "onCommand:extension.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/js.snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/js.snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/ts.snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/ts.snippets.json"
      },
      {
        "language": "css",
        "path": "./snippets/css.snippets.json"
      },
      {
        "language": "scss",
        "path": "./snippets/scss.snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.4",
    "husky": "^3.1.0",
    "mocha": "^6.1.4",
    "semantic-release": "^17.2.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "master",
      "develop"
    ],
    "debug": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "fetoolkit-*.vsix",
              "label": "FE Toolkit Package",
              "name": "FE Toolkit.vsix"
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "asstes/*",
            "docs/*",
            "languages/*",
            "snippets/*",
            "src/*",
            "CHANGELOG.md",
            "package.json",
            "yarn.lock"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
